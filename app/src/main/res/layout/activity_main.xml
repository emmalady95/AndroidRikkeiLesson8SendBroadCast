<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.emmalady.androidrikkeilesson8sendbroadcast.MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_broadcast"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_activity"
        android:textSize="@dimen/tv_size" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:orientation="vertical">
        <Button
            android:id="@+id/btSendAppA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_application_A"
            android:layout_margin="@dimen/bt_margin"
            android:textAllCaps="false"
            android:textSize="@dimen/tv_size"
            android:onClick="sendAppA"/>
        <Button
            android:id="@+id/btSendSubB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_to_sub_B"
            android:layout_margin="@dimen/bt_margin"
            android:textAllCaps="false"
            android:textSize="@dimen/tv_size"
            android:onClick="sendSubB"/>
    </LinearLayout>
</RelativeLayout>
